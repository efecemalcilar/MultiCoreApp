@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Index";
}
@*asp-action Tag helper dan gelioy tag helperde ViewImports içinde*@

<h1>Kategoriler</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Kategori Ekle</a>

@*table.table.table-bordered>thead>tr>th*3^^tbody>tr>td*3*@

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>

                <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detaylar</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>

    }
    </tbody>
</table>


